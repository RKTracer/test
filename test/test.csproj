<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  
    <DefaultItemExcludes>$(DefaultItemExcludes);**/rkcs.cs;rktracer/**/*.*;Directory.build.tcl;*.rk_backup</DefaultItemExcludes>
    <!-- This enables rktracer for C# -->
    <UseHostCompilerIfAvailable>true</UseHostCompilerIfAvailable>
    <CscToolExe>C:\rktracer\bin\csc.exe</CscToolExe>
</PropertyGroup>

</Project>

